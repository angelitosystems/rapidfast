# Configuración del servidor
PORT=3000
HOST=localhost
NODE_ENV=development

# Configuración de base de datos
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=rapidfast_db

# Configuración de MongoDB (opcional)
MONGODB_URI=mongodb://localhost:27017/rapidfast_db

# Configuración de SQLite (opcional)
SQLITE_PATH=./data/rapidfast.sqlite

# Configuración de MySQL (opcional)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=rapidfast_db

# Configuración de seguridad
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1h

# Configuración de logs
LOG_LEVEL=info
LOG_FORMAT=dev

# Configuración de Swagger
SWAGGER_TITLE=RapidFAST API
SWAGGER_DESCRIPTION=API generada con RapidFAST Framework
SWAGGER_VERSION=1.0.0
SWAGGER_ROUTE_PREFIX=/api-docs
SWAGGER_EXPLORER=true
SWAGGER_ENABLED=true
SWAGGER_SERVERS=[{"url":"/","description":"Development server"}]

# Configuración de RapidWatch™
WATCH_ENABLED=true
WATCH_IGNORE_PATTERNS=node_modules/**/*,dist/**/*,.git/**/* 